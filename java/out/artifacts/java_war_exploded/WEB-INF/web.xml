<?xml version="1.0" encoding="UTF-8"?>
<web-app  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuperHeroes</servlet-name>
        <servlet-class>controller.SuperHeroesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/loginForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuperHeroes</servlet-name>
        <url-pattern>/createHero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuperHeroes</servlet-name>
        <url-pattern>/editHero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuperHeroes</servlet-name>
        <url-pattern>/deleteHero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuperHeroes</servlet-name>
        <url-pattern>/newHero</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuperHeroes</servlet-name>
        <url-pattern>/displayHero</url-pattern>
    </servlet-mapping>
</web-app>